# ðŸš€ Lancerscape2 Production Environment Configuration
# Copy this file to .env and fill in your production values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=lancerscape2_production
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_db_password
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=50

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0

# =============================================================================
# SECURITY KEYS (GENERATE THESE SECURELY!)
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_at_least_64_characters_long_for_production_use
SESSION_SECRET=your_super_secure_session_secret_at_least_64_characters_long_for_production_use

# JWT Configuration
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# SMS CONFIGURATION (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_BUCKET=your-upload-bucket
UPLOAD_REGION=us-east-1

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_project_id
BLOCKCHAIN_CHAIN_ID=1
JOB_POSTING_ADDRESS=0x...
ESCROW_ADDRESS=0x...
REPUTATION_ADDRESS=0x...
BLOCKCHAIN_PRIVATE_KEY=your_private_key_for_contract_interactions

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn
LOG_LEVEL=info
METRICS_TOKEN=your_secure_metrics_token_for_monitoring_endpoints

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Enable Redis clustering for high availability
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=

# Database connection pooling
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=300000

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_CONNECT_SRC="'self' wss: ws:"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup schedule (cron format)
DB_BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# RATE LIMITING & DDoS PROTECTION
# =============================================================================
# API rate limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# Authentication rate limiting
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# Registration rate limiting
REGISTRATION_RATE_LIMIT_WINDOW=3600000
REGISTRATION_RATE_LIMIT_MAX=3

# =============================================================================
# LOGGING & AUDITING
# =============================================================================
# Log retention
LOG_RETENTION_DAYS=90
LOG_MAX_SIZE=20m

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info

# =============================================================================
# HEALTH CHECKS & MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000

# =============================================================================
# CACHING STRATEGIES
# =============================================================================
# Redis cache TTLs (in seconds)
CACHE_TTL_USER_PROFILE=3600
CACHE_TTL_JOB_LISTINGS=1800
CACHE_TTL_SEARCH_RESULTS=900

# =============================================================================
# ENCRYPTION & KEY MANAGEMENT
# =============================================================================
# File encryption
FILE_ENCRYPTION_ENABLED=true
FILE_ENCRYPTION_ALGORITHM=aes-256-gcm

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================
# GDPR compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555

# Privacy settings
ANONYMIZE_LOGS=true
MASK_SENSITIVE_DATA=true

# =============================================================================
# DISASTER RECOVERY
# =============================================================================
# Backup verification
BACKUP_VERIFICATION_ENABLED=true
BACKUP_VERIFICATION_INTERVAL=86400000

# Recovery procedures
RECOVERY_MODE_ENABLED=false
RECOVERY_MODE_PASSWORD=your_recovery_password
